<?xml version="1.0"?>
<object>

  <order manager="plone.portalheader" skinname="osha"
         based-on="Plone Default">
    <viewlet name="osha.topbanner"
             insert-after="plone.logo" />
    <viewlet name="osha.portaltitle"
             insert-after="osha.topbanner" />
    <viewlet name="osha.site_actions"
             insert-after="osha.portaltitle" />
  </order>

  <order manager="plone.portalfooter" skinname="osha"
         based-on="Plone Default">
    <viewlet name="osha.footer"
             insert-before="*" />
  </order>
  
  
  

  <hidden manager="plone.portalheader" skinname="osha">
    <viewlet name="plone.site_actions" />
    <viewlet name="plone.searchbox" />
  </hidden>


  <hidden manager="plone.portalfooter" skinname="osha">
    <viewlet name="plone.colophon" />
    <viewlet name="plone.footer" />
  </hidden>

</object>
