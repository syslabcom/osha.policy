  <object name="object_buttons" meta_type="CMF Action Category">
    <object name="set_file_languages" meta_type="CMF Action" i18n:domain="osha">
      <property name="title" i18n:translate="">Set file languages</property>
      <property name="description" i18n:translate=""></property>
      <property
          name="url_expr">string:${globals_view/getCurrentObjectUrl}/@@set_file_languages</property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:not globals_view.isPortalOrPortalDefaultPage()</property>
      <property name="permissions">
        <element value="Manage portal"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>

  <object name="object" meta_type="CMF Action Category">
    <object name="bulktagger" meta_type="CMF Action" i18n:domain="osha">
      <property name="title" i18n:translate="">Bulk Tagging</property>
      <property name="description" i18n:translate=""></property>
      <property name="url_expr">python:object_url+'/@@bulk_tagger?Subject='+request.get('Subject','')+'&amp;SearchableText='+request.get('SearchableText','')</property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:object.portal_type in ('Folder', 'Topic')</property>
      <property name="permissions">
        <element value="Manage portal"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>
</object>
