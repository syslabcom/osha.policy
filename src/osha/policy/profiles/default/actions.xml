      <property name="title" i18n:translate="">Privacy Policy</property>
      <property name="description" i18n:translate=""></property>
      <property name="url_expr">string:${portal_url}/en/privacy-policy</property>
      <property name="icon_expr"></property>
      <property name="available_expr"></property>
      <property name="permissions"/>
      <property name="visible">True</property>
    </object>
  </object>

  <object name="site_actions" meta_type="CMF Action Category">
    <object name="osha_translations" meta_type="CMF Action" i18n:domain="osha">
      <property name="title" i18n:translate="">Translations</property>
      <property name="description" i18n:translate=""></property>
