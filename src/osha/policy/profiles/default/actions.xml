  <object name="site_actions" meta_type="CMF Action Category">
    <object name="osha_faq" meta_type="CMF Action" i18n:domain="osha">
      <property name="title" i18n:translate="">FAQ</property>
      <property name="description" i18n:translate=""></property>
      <property
          name="url_expr">string:${portal_url}/${folder/portal_languages/getPreferredLanguage}/faq</property>
      <property name="icon_expr"></property>
      <property name="available_expr"></property>
      <property name="permissions">
        <element value="View"/>
      </property>
      <property name="visible">True</property>
    </object>
  </object>

  <object name="site_actions" meta_type="CMF Action Category">
    <object name="contact" meta_type="CMF Action" i18n:domain="plone">
      <property name="title" i18n:translate="">Contact</property>
