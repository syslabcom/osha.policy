<?xml version="1.0"?>
    <object name="portal_controlpanel" meta_type="Plone Control Panel Tool"> 
    <configlet  title="OSHA Database"  
                action_id="OSHADatabase" 
                appId="OSHADatabase"  
                category="Products" condition_expr="" 
                url_expr="string:${portal_url}/@@osha-database-controlpanel" 
                visible="True"> 
        <permission>Manage portal</permission> 
    </configlet> 

    <configlet  title="Versioning Settings"  
                action_id="versioning-settings" 
                appId="CMFEditions"  
                category="Products" condition_expr="" 
                url_expr="string:${portal_url}/versioning_config_form" 
                visible="True"> 
        <permission>Manage portal</permission> 
    </configlet> 

    <configlet title="Navigation" action_id="NavigationSettings" appId="Plone"
               category="Plone" condition_expr=""
               icon_expr="string:$portal_url/navigation_icon.png"
               url_expr="string:${portal_url}/@@navigation-controlpanel"
               visible="False">
      <permission>Plone Site Setup: Navigation</permission>
    </configlet>

    <configlet title="Indexing Settings" action_id="IndexingSettings" appId="IndexingSettings"
               category="Products" condition_expr=""
               url_expr="string:${portal_url}/@@indexing-controlpanel" 
               visible="False">
      <permission>Manage portal</permission>
    </configlet>

</object> 
