<?xml version="1.0"?>
<object name="solr">
  <connection>
    <base value="/solr" />
  </connection>
  <settings>
    <async value="True" />
    <auto-commit value="False"/>
    <index-timeout value="0" />
    <search-timeout value="0" />
    <max-results value="200" />
    <required-query-parameters />
    <search-pattern
      value="(Title:{value}^5 OR Description:{value}^2 OR SearchableText:{value} OR SearchableText:({base_value}) OR searchwords:({base_value})^1000) showinsearch:True'" />
    <search-facets>
      <parameter name="portal_type" />
      <parameter name="review_state" />
      <parameter name="Subject" />
    </search-facets>
    <required-query-parameters/>
    <filter-query-parameters>
      <parameter name="portal_type" />
    </filter-query-parameters>
    <slow-query-threshold value="0" />
    <effective-steps value="1" />
    <exclude-user value="False" />
    <required-query-parameters>
      <parameter name="SearchableText"/>
    </required-query-parameters>
    <highlight_fields>
      <parameter name="SearchableText" />
    </highlight_fields>
    <highlight_formatter_pre
        value="&lt;cite class=&quot;highlight&quot;&gt;" />
    <highlight_formatter_post
        value="&lt;/cite&gt;" />
    <highlight_fragsize value="200" />
    <field-list>
      <parameter name="score" />
      <parameter name="CreationDate" />
      <parameter name="Creator" />
      <parameter name="Date" />
      <parameter name="Description" />
      <parameter name="EffectiveDate" />
      <parameter name="ExpirationDate" />
      <parameter name="Language" />
      <parameter name="ModificationDate" />
      <parameter name="Title" />
      <parameter name="Type" />
      <parameter name="UID" />
      <parameter name="cmf_uid" />
      <parameter name="created" />
      <parameter name="effective" />
      <parameter name="end" />
      <parameter name="exclude_from_nav" />
      <parameter name="expires" />
      <parameter name="getIcon" />
      <parameter name="getId" />
      <parameter name="getObjPositionInParent" />
      <parameter name="getObjSize" />
      <parameter name="id" />
      <parameter name="is_folderish" />
      <parameter name="listCreators" />
      <parameter name="meta_type" />
      <parameter name="modified" />
      <parameter name="outdated" />
      <parameter name="path_string" />
      <parameter name="portal_type" />
      <parameter name="review_state" />
      <parameter name="sortable_title" />
      <parameter name="start" />
    </field-list>
  </settings>
</object>
