    <browser:page
        for="*"
        name="lc_maintenance"
        class=".lc_osha.LCMaintenanceView"
        permission="zope2.View"      
        allowed_interface=".interfaces.ILCMaintenanceView"
        />

    <browser:page
        for="*"
        name="content_statistics_export"
        class=".content_stats.ContentStatisticsExportView"
        permission="zope2.View"      
        />

    <!-- clicksearch portlet metadata widgets -->

    <!-- Multilingual Thesaurus -->
    <browser:page
        name="slc.clicksearch.multilingual_thesaurus"
        for="Products.ATContentTypes.content.topic.ATTopic"
        permission="zope.Public"
        class=".clicksearch_support.MultilingualThesaurusView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />

    <browser:page
        name="slc.clicksearch.index_multilingual_thesaurus"
        for="*"
        permission="zope.Public"
        class=".clicksearch_support.MultilingualThesaurusIndexView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />
    <!-- * Multilingual Thesaurus * -->

    <!-- Country -->
    <browser:page
        name="slc.clicksearch.country"
        for="Products.ATContentTypes.content.topic.ATTopic"
        permission="zope.Public"
        class=".clicksearch_support.CountryView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />
    <!-- * Country * -->

    <!-- getRemoteLanguage -->
    <browser:page
        name="slc.clicksearch.getRemoteLanguage"
        for="Products.ATContentTypes.content.topic.ATTopic"
        permission="zope.Public"
        class=".clicksearch_support.RemoteLanguageView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />
    <!-- * getRemoteLanguage * -->

    <!-- Subcategory -->
    <browser:page
        name="slc.clicksearch.subcategory"
        for="Products.ATContentTypes.content.topic.ATTopic"
        permission="zope.Public"
        class=".clicksearch_support.SubcategoryView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />

    <browser:page
        name="slc.clicksearch.index_subcategory"
        for="*"
        permission="zope.Public"
        class=".clicksearch_support.SubcategoryIndexView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />
    <!-- * Subcategory * -->

    <!-- NACE -->
    <browser:page
        name="slc.clicksearch.nace"
        for="Products.ATContentTypes.content.topic.ATTopic"
        permission="zope.Public"
        class=".clicksearch_support.NACEView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />

    <browser:page
        name="slc.clicksearch.index_nace"
        for="*"
        permission="zope.Public"
        class=".clicksearch_support.NACEIndexView"
        layer="slc.clicksearch.interfaces.IThemeLayer"
        />
    <!-- * NACE * -->


    <browser:page
        name="getHostname"
        for="*"
        permission="zope.Public"
        class=".HostnameView"
        />

    <subscriber 
        for="slc.outdated.IObjectOutdatedToggleEvent"
        handler=".adapter.handleToggleOutdated"
    />

</configure>

