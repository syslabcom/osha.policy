<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
<body>


<tal:block define="portlet_title string:European Risk Observatory;
           portlet_id string:portlet_riskob;
           col_bg_header string:#f1ba8d;
           col_bg_body string:#fbe6d1"
           metal:define-macro="portlet">
    <div class="padding" metal:use-macro="here/portlet_macro_template/macros/portletBox">

    <metal:block fill-slot="portlet_body">
      <div style="width:200px;">
        <img src="portlet_riskob_icon.gif" style="float: left; padding: 0px 10px 0px 0px">
        <div class="portletContent">
            <a href="http://riskobservatory.osha.europa.eu/" i18n:translate="portlet_riskob_text">Anticipating change!</a>
        </div>
        <br clear="all">
      </div>
    </metal:block>
    </div>

</tal:block>

</body>
</html>






